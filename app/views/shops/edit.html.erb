<%= tinymce_assets %>
<div> <h2 class="page-header">编辑企业信息 </h2>
</div>
<%if @shop.logo%>
  <%=image_tag @shop.logo.url(:thumb)%>
<%end%>
<div>
  <%= simple_form_for(@shop, url: {:action=>"update"} ) do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :logo, as: :file%>
      <%= f.input :intro, input_html: { class: 'tinymce' } %>
      <%= tinymce%>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "提交" %>
    </div>
  <% end %>
</div>
