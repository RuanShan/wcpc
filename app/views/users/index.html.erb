<div class="container">
  <div class="row">
    <h3>管理用户</h3>
    <div class="column">
      <table class="table">
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <%= render user %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <h3>微信用户</h3>
    <div class="column">
      <table class="table">
        <tbody>
          <thead>
            <tr>
              <th>头像</th>
              <th>微信名</th>
              <th>性别</th>
              <th>国家</th>
              <th>省份</th>
              <th>城市</th>
            </tr>
          </thead>
          <% @wx_users.each do |user| %>
            <tr>
              <td><%=image_tag user.avatar, width:40, height:40 %></td>
              <td><%= user.nickname %></td>
              <td><%= user.gender==0 ? "-" : (user.gender==1 ? "男" : "女") %></td>
              <td><%= user.country %></td>
              <td><%= user.province %></td>
              <td><%= user.city %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
